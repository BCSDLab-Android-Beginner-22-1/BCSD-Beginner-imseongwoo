<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="example example example"
        android:textSize="15sp"

        app:layout_constraintEnd_toStartOf="@id/writer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/writer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="작성자 : "
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/writer_content_textview"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/writer_content_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="임성우"
        android:textSize="15sp"

        app:layout_constraintEnd_toEndOf="@id/time_textview"
        app:layout_constraintStart_toEndOf="@id/writer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="작성 시간 : "
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toStartOf="@+id/time_content_textview"
        app:layout_constraintStart_toEndOf="@+id/writer_content_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_content_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="22.07.10"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/time_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/board_content_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />


</androidx.constraintlayout.widget.ConstraintLayout>